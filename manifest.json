{
  "manifest_version": 3,
  "name": "Marketing Flow Chrome Extension",
  "version": "1.0",
  "description": "Drive butonunun üzerine gelindiğinde videoyu otomatik popup'da oynatır.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://*.airtable.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
